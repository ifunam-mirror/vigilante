<h1>Editing camera</h1>

<%= error_messages_for :camera %>

<%= @map.div(:width => 640, :height => 480) %>

<% form_for(@camera) do |f| %>
  <p>
    <%= f.hidden_field :lat %>
  </p>
  <p>
    <%= f.hidden_field :lng %>
  </p>
  <p>
    <%= f.label "Dirección IP" %><br />
    <%= f.text_field :ip %>
  </p>
  <p>
    <%= f.label "Localización" %><br />
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label "Descripción" %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label "Codec" %><br />
    <%= collection_select(:camera, :codec_id, Codec.find(:all), :id, :name) %>
  </p>
  <p>
    <%= f.label "Calidad" %><br />
    <%= collection_select(:camera, :quality_id, Quality.find(:all), :id, :name) %>
  </p>
  <p>
    <%= f.label "Agente" %><br />
    <%= collection_select(:camera, :agent_id, Agent.find(:all), :id, :name) %>
  </p>
  <p>
    <%= f.label "Duración de videos en minutos" %><br />
    <%= collection_select(:camera, :video_duration, [5,10,20], :to_i, :to_s) %>
  </p>
  <!-- <p>
    <%= f.label "Usuario" %><br />
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label "Contraseña" %><br />
    <%= f.text_field :password %>
  </p> -->
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @camera %> |
<%= link_to 'Back', cameras_path %>
